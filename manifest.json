{
    "manifest_version": 3,
    "name": "Let Me Cite That!",
    "version": "1.0",
    "description": "Generate citations from URLs",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ]
}
  